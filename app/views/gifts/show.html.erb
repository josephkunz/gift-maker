<h1><%= @gift.title %></h1>

<p>Description: <%= @gift.description %></p>
<p>Price: <%= @gift.price %></p>
<p>Completed: <%= @gift.status %></p>
<p>Occasion: <%= @gift.occasion %></p>


<%= link_to 'all Gifts', gifts_path, class: "btn btn-success" %>
<%= link_to 'edit', edit_gift_path, class: "btn btn-success" %>
<%= link_to 'delete', gift_path(@gift), method: :delete, class: "btn btn-success",  data: { confirm: "Are you sure?" } %>
